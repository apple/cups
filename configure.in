AC_INIT(cups/cups.h)
AC_CONFIG_HEADER(config.h)
AC_PREFIX_DEFAULT(/)

AC_ARG_ENABLE(debug, [  --enable-debug          turn on debugging [default=no]],
if eval "test x$enable_debug = xyes"; then
	OPTIM="-g"
else
	OPTIM="-O"
fi)

dnl Checks for programs...
AC_PROG_CXX
AC_PROG_CPP
AC_PATH_PROG(AR,ar)
AC_PATH_PROG(CP,cp)
AC_PATH_PROG(MKDIR,mkdir)
AC_PATH_PROG(RM,rm)
AC_PATH_PROG(FLUID,fluid)
AC_PATH_PROG(GROFF,groff)
AC_PATH_PROG(HTMLDOC,htmldoc)

dnl Architecture checks...
AC_C_BIGENDIAN

dnl Check for libraries...
AC_PATH_XTRA
if test "$X_PRE_LIBS" != ""; then
	echo "Ignoring libraries \"$X_PRE_LIBS\" requested by configure."
fi
if test "$X_LIBS" = " -L/usr/lib"; then
	echo "Ignoring X library directory \"$X_LIBS\" requested by configure."
	X_LIBS=""
fi
AC_CHECK_HEADER(FL/Fl.H,X_LIBS="$X_LIBS -lfltk -lX11 -lXext"
AC_DEFINE(HAVE_LIBFLTK))
AC_CHECK_LIB(jpeg,jpeg_destroy_decompress)
AC_CHECK_LIB(z,deflate)
AC_CHECK_LIB(png,png_init_io)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADER(shadow.h)

dnl Checks for string functions.
AC_CHECK_FUNCS(strdup)
AC_CHECK_FUNCS(strcasecmp)
AC_CHECK_FUNCS(strncasecmp)

dnl Substitutions
AC_SUBST(OPTIM)

AC_OUTPUT(Makedefs)

