LIBCUPSIMAGEORDER =	@LIBCUPSIMAGEORDER@
LINKCUPS	=	@LINKCUPS@ $(SSLLIBS)
LINKCUPSIMAGE	=	@LINKCUPSIMAGE@
LIBS		=	$(LINKCUPS) $(COMMONLIBS)
OPTIM		=	@OPTIM@
OPTIONS		=
PAMLIBS		=	@PAMLIBS@
PAP		=	@PAP@
PDFTOPS		=	@PDFTOPS@
PHPDIR		=	@PHPDIR@
SSLFLAGS	=	@SSLFLAGS@
SSLLIBS		=	@SSLLIBS@

